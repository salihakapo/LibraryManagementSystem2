@model LibraryManagementSystem2.Models.Entity.TBLMEMBERS
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMyPanel.cshtml";
}

<h2>Library Member Profile Information</h2>

@using (Html.BeginForm("Index2", "MyPanel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder">E-mail Address: </label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.NAME)
                @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.SURNAME)
                @Html.TextBoxFor(x => x.SURNAME, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.USERNAME)
                @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.PASSWORD)
                @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.PHOTO)
                @Html.TextBoxFor(x => x.PHOTO, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.SCHOOL)
                @Html.TextBoxFor(x => x.SCHOOL, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Update Information</button>
            </td>
        </tr>
    </table>
}
