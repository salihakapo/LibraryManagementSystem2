@using LibraryManagementSystem2.Models.Entity
@model List<TBLMOVEMENT>
@{
    ViewBag.Title = "MyBooks";
    Layout = "~/Views/Shared/_LayoutMyPanel.cshtml";
}

<h4>My Book List</h4>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <a class="btn btn-success">
                                                <span class="bg-success">
                                                    @(((DateTime)item.BORROWDATE).ToString("dd-MM-yyyy"))
                                                </span>
                                            </a>
                                            -----
                                            <a class="btn btn-warning">
                                                <span class="bg-warning">
                                                    @if (item.MEMBERRETURNDATE == null)
                                                    {
                                                        <i>Reading...</i>
                                                    }
                                                    @if (item.MEMBERRETURNDATE != null)
                                                    {
                                                        @(((DateTime)item.MEMBERRETURNDATE).ToString("dd-MM-yyyy"))
                                                    }
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.TBLBOOK.NAME - @item.TBLBOOK.TBLAUTHOR.NAME @item.TBLBOOK.TBLAUTHOR.SURNAME
                                                </div>
                                                @*<div class="timeline-footer">
                                                        <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>*@
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
    </section>
</body>
</html>