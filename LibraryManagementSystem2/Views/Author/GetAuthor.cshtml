@model LibraryManagementSystem2.Models.Entity.TBLAUTHOR
@{
    ViewBag.Title = "GetAuthor";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateAuthor", "Author", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Author ID</label>
            @Html.TextBoxFor(a => a.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Name</label>
            @Html.TextBoxFor(a => a.NAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Surname</label>
            @Html.TextBoxFor(a => a.SURNAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Detail Information</label>
            @Html.TextAreaFor(a => a.DETAILS, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Update Author Information</button>
    </div>
}


