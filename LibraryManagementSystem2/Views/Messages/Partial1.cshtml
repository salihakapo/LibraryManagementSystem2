<div class="col-md-3">
    <a href="/Messages/NewMessage/" class="btn btn-primary btn-block mb-3">New Message</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Menu</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Messages/Index/" class="nav-link">
                        <i class="fas fa-inbox"></i> Inbox
                        <span class="badge bg-primary float-right">@ViewBag.v1</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Messages/Send/" class="nav-link">
                        <i class="far fa-envelope"></i> Sent
                        <span class="badge bg-danger float-right">@ViewBag.v2</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
</div>
