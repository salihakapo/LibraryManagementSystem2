@using LibraryManagementSystem2.Models.Entity
@model List<TBLMESSAGES>
@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_LayoutMyPanel.cshtml";
}

<h2>Sent Messages Page</h2>

<table class="table table-bordered">
    <tr>
        <th>Receiver</th>
        <th>Subject</th>
        <th>Message</th>
        <th>Date</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.RECEIVER</td>
            <td>@x.SUBJECT</td>
            <td>@x.MESSAGE</td>
            <td>@x.DATE</td>
        </tr>
    }
</table>

