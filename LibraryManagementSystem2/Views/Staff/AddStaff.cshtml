@model LibraryManagementSystem2.Models.Entity.TBLSTAFF
@{
    ViewBag.Title = "AddStaff";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Staff Name</label>
        @*<input type="text" class="form-control" name="STAFF" />*@
        @Html.TextBoxFor(x => x.STAFF, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.STAFF, "", new { @style = "color:forestgreen" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Add Staff</button>
    </div>
</form>



